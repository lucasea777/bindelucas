// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "ctrl+m",
        "command": "terminalCommandKeys.run",
        "args": {
            "cmd": "guake -n `dirname ${file}`; guake --show",
            "newTerminal": false,
            "saveAllFiles": false,
            "showTerminal": false
        }
    },
    {
        "key": "ctrl+u",
        "command": "alloy.executeAllCommands",
    },
    {
        "key": "ctrl+i",
        "command": "alloy.openLatestInstance",
    },
    { "key": "alt+shift+p",   "command": "workbench.action.moveEditorRightInGroup" },
    { "key": "alt+shift+o",   "command": "workbench.action.moveEditorLeftInGroup" },
    { "key": "alt+shift+1",   "command": "workbench.action.toggleActivityBarVisibility" },
    { 
        "key": "ctrl+k",
        "command": "editor.action.clipboardCutAction",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+enter",
        "command": "extension.jumpy-word",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+b",
        "command": "extension.toggleBool",
        "when": "editorTextFocus"
      },
          
    {
        "key": "alt+j",
        "command": "macros.cursorVeryLeft",
        // "command": "cursorLeft",
        "when": "textInputFocus"
    },
    {
        "key": "alt+l",
        // "command": "cursorRight",
        "command": "macros.cursorVeryRight",
        "when": "textInputFocus"
    },
    {
        "key": "alt+k",
        "command": "macros.cursorVeryDown",
        "when": "textInputFocus"
    },
    {
        "key": "alt+i",
        "command": "macros.cursorVeryUp",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+l",
        "command": "cursorEnd",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+j",
        "command": "cursorHome",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+l",
        "command": "cursorEndSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+j", //usado por sxhd
        "command": "cursorHomeSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+j",
        "command": "cursorLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+l",
        "command": "cursorRightSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+k",
        "command": "cursorDownSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+i",
        "command": "cursorUpSelect",
        "when": "textInputFocus"
    },{
        "key": "shift+ctrl+i", //usado por sxhd
        "command": "editor.action.moveLinesUpAction", 
        "when": "textInputFocus"
    },
    {
        "key": "shift+ctrl+k",
        "command": "editor.action.moveLinesDownAction",
        "when": "textInputFocus"
    },
    {
        "key": "alt+d",
        "command": "macros.cursorVeryDown",
        "when": "textInputFocus"
    },
    {
        "key": "alt+u",
        "command": "macros.cursorVeryUp",
        "when": "textInputFocus"
    },
    {
        "key": "alt+p",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "alt+o",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "alt+h",
        "command": "deleteRight"
    },
    {
        "key": "alt+g",
        "command": "deleteLeft"
    },
    {
        "key": "ctrl+shift+j",
        "command": "-workbench.action.search.toggleQueryDetails",
        "when": "searchViewletVisible"
    },
    {
        "key": "alt+c",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+/",
        "command": "-editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        
      "key": "alt+a",          
      "command": "workbench.action.focusActiveEditorGroup", 
      "when": "terminalFocus" 
    },
    {
        "key": "ctrl+r",
        "command": "workbench.action.gotoSymbol"
    },
    {
        "key": "ctrl+shift+o",
        "command": "-workbench.action.gotoSymbol"
    },
    {
        "key": "ctrl+e",
        "command": "editor.action.peekDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    {
        "key": "ctrl+shift+f10",
        "command": "-editor.action.peekDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    {
        "key": "shift+alt+c",
        "command": "editor.action.blockComment",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+a",
        "command": "-editor.action.blockComment",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+q",
        "command": "workbench.action.togglePanel"
    },
    {
        "key": "ctrl+j",
        "command": "-workbench.action.togglePanel"
    },
    {
        "key": "alt+1",
        "command": "workbench.action.terminal.focusAtIndex1",
        "when": "terminalFocus"
    },
    {
        "key": "alt+2",
        "command": "workbench.action.terminal.focusAtIndex2",
        "when": "terminalFocus"
    },
    {
        "key": "alt+3",
        "command": "workbench.action.terminal.focusAtIndex3",
        "when": "terminalFocus"
    },
    {
        "key": "alt+4",
        "command": "workbench.action.terminal.focusAtIndex4",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+t",
        "command": "workbench.action.terminal.new",
        "when": "terminalFocus"
    },
    {
        "key": "alt+a",
        "command": "workbench.action.focusPanel"
    },
]